@model SunSun.Model.Models.Role

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="container-fluid pt-4 px-4">
    <div class="col-sm-12 col-xl-12">
        <div class="bg-info rounded h-100 p-4">
            <h2 class="mb-4">Roles Table</h2>
            <h4>Delete</h4>
            <h5>Are you sure you want to delete this?</h5>
            <form class="text-dark">
                <div class="row mb-3">

                    @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "col-sm-2 col-form-label text-dark" })
                    <div class="col-sm-3">
                        <input type="text" value="@Model.ID" disabled class="form-control text-danger">
                    </div>
                </div>
                <div class="row mb-3">

                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-sm-2 col-form-label text-dark" })
                    <div class="col-sm-3">
                        <input type="text" value="@Model.Name" disabled class="form-control text-danger">
                    </div>
                </div>
                <div class="row mb-3">

                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label text-dark" })
                    <div class="col-sm-3">
                        <input type="text" value="@Model.Description" disabled class="form-control text-danger">
                    </div>
                </div>
            </form>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary m-2">Delete</button>|
                <a href="@Url.Action("Index","Roles")" class="btn btn-warning m-2">Back</a>
            </div>

        </div>

    </div>
</div>