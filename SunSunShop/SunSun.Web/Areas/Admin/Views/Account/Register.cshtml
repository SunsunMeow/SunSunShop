@model SunSun.Web.Models.AccountVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <a href="@Url.Action("Index","Home")" class="">
                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>SunSun</h3>
            </a>
            <h3>Sign Up</h3>
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            
            @Html.AntiForgeryToken()
            <div class="form-floating mb-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "name@example.com", @type = "email" })
                <label for="floatingInput">Email address</label>
                @Html.ValidationMessageFor(m=>m.Email)
            </div>
            <div class="form-floating mb-4">

                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
                <label for="floatingPassword">Password</label>
            </div>
            <div class="form-floating mb-3">

                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @placeholder = "Sun", @type = "text" })
                <label for="floatingText">FullName</label>
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-floating mb-3">

                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = "0123456789", @type = "text" })
                <label for="floatingText">Phone</label>
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Check me out</label>
                </div>
                <a href="">Forgot Password</a>
            </div>
            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Sign Up</button>

        }
        <p class="text-center mb-0">Already have an Account? <a href="@Url.Action("Login","Account")">Sign In</a></p>
    </div>
</div>